{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@actions/*": ["src/actions/*"],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/pages/components/*"],
      "@selectors": ["src/selectors/index"],
      "@selectors/*": ["src/selectors/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"]
    },
    "types": ["node", "@playwright/test"]
  },
  "include": ["src", "tests", "playwright.config.ts"],
  "exclude": ["node_modules", "allure-results", "allure-report"]
}